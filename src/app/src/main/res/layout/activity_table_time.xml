<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Linear"
    android:layout_alignParentTop="true"
    android:dividerPadding="0dp"
    android:layout_margin="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#7f8c8d"
        android:id="@+id/TopSection">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1"
            android:gravity="center|left">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:src="@drawable/arrow_left_alt1"
                android:background="#7f8c8d"
                android:layout_weight="0.09"
                android:onClick="mostrar" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="75dp"
                android:id="@+id/imageView"
                android:src="@drawable/iconoas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Horario de Clases"
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_weight="0.17"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <TableLayout android:id="@+id/tabla_cuerpo" android:layout_height="match_parent" android:layout_width="match_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:background="@drawable/cell_shape" android:padding="10dp" android:id="@+id/textView4" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textAppearance="?android:attr/textAppearanceMedium" android:text="TextView"></TextView>
            <TextView android:background="@drawable/cell_shape" android:padding="10dp" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="TextView"></TextView>
            <TextView android:background="@drawable/second_line"  android:layout_width="0dp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
            <TextView android:background="@drawable/cell_shape" android:padding="10dp" android:id="@+id/textView56" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="TextView"></TextView>
            <TextView android:background="@drawable/cell_shape" android:padding="10dp" android:id="@+id/textView57" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="TextView"></TextView>
