<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Linear"
    android:layout_alignParentTop="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#3498db"
                android:id="@+id/TopSection">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:weightSum="1"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="75dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/iconoas" />

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="ITESA Calendar"
                        android:id="@+id/textView"
                        android:gravity="center"
                        android:textColor="#363636" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:background="#00000000"
                    android:layout_weight="3"
                    android:src="@drawable/three115" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MiddleSection"
                android:background="#3498db"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:paddingTop="30dp">


                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inventory"
                        android:background="#00000000"
                        android:layout_weight="0.33333"
                        android:src="@drawable/calendar"
                        android:onClick="mostrar"
                        android:soundEffectsEnabled="true"
                        />


                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/deeds"
                        android:src="@drawable/calendario"
                        android:background="#00000000"
                        android:layout_weight="0.33333"
                        android:soundEffectsEnabled="true"
                        android:onClick="show" />

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/client"
                        android:src="@drawable/vallet"
                        android:background="#00000000"
                        android:layout_weight="0.33333"
                        android:soundEffectsEnabled="true"
                        android:onClick="regarde" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Agenda"
                        android:id="@+id/textView1"
                        android:textColor="#ffffff"
                        android:layout_weight="0.33333"
                        android:gravity="center_horizontal"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Instituto"
                        android:id="@+id/textView2"
                        android:textColor="#ffffff"
                        android:layout_weight="0.33333"
                        android:gravity="center_horizontal"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Horario"
                        android:id="@+id/textView3"
                        android:textColor="#ffffff"
                        android:layout_weight="0.33333"
                        android:gravity="center_horizontal"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Estatico"
                android:weightSum="1"
                android:gravity="center"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/world" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ultimos Eventos"
                    android:id="@+id/textView4"
                    android:paddingLeft="7dp"
                    android:paddingTop="3dp"
                    android:textColor="#363636" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:id="@+id/list"
                android:paddingTop="8dp"
                android:choiceMode="singleChoice"
                android:listSelector="@drawable/abc_item_background_holo_light"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
